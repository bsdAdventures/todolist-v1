<%- include('header') -%>
<div class="box" id="heading">
  <h1 style="color: purple"><%= listTitle %></h1>
</div>

<div class="box">
  <% for(let i = 0; i < newTodos.length; i++){ %>
  <div class="item">
    <input type="checkbox" />
    <p><%= newTodos[i] %></p>
  </div>

  <%}%>
      <form action="/" method="post" class="item">
        <input
          type="text"
          name="newTodo"
          placeholder="New item"
          autocomplete="off"
        />
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
  </form>
</div>


<%- include('footer') -%>